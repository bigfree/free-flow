enum UserRole {
  ROLE_GUEST
  ROLE_USER
  ROLE_ADMIN
}

enum UserType {
  GUEST
  USER
  ADMIN
}

enum LogType {
  DEBUG
  LOG
  ERROR
  VERBOSE
  WARN
}

enum LogFrom {
  API
  APP
}
